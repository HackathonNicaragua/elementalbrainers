<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elementalbraines.expressapp.ui.activity.TraductorActivity"
    tools:showIn="@layout/activity_traductor"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cntInterprete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifInterprete"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/inicio" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f1eeee"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtMensaje"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_centerHorizontal="true"
            android:background="#f1eeee"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Dinos que quieres comunicar"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />



        <ImageButton
            android:id="@+id/imvReproducir"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_megafono" />
    </LinearLayout>

</LinearLayout>
