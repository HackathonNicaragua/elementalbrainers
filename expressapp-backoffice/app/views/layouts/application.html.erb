<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title).strip %> | <%= t('project_title') %> </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= yield(:javascripts) %>

    <%= favicon_link_tag %>
  </head>

  <body>

    <div class="wrapper">
      <%= render 'layouts/sidebar' %>

      <div class="main-panel">
        <%= render 'layouts/top_var' %>

        <div class="content">
          <%= yield %>
        </div>
      </div>

    </div>

  </body>
</html>
